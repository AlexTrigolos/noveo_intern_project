<div id="<%= dom_id room %>">
  <h2>
    <strong>
      <%= link_to "#{room.room_name}", room_path(room) %>
    </strong>
  </h2>

  <p>
    <strong>Short description:</strong>
    <%= room.short_description %>
  </p>
  <% if params[:action] == "show" %>
    <p>
      <strong>Long description:</strong>
      <%= room.long_description %>
    </p>
  <% end %>

  <p>
    <strong>Price:</strong>
    <%= room.price %>
  </p>

  <% room.room_photos.each_with_index do |p, index| %>
    <%= image_tag(p.photo_url, alt: "failed to upload a photo of the room") if params[:action] == "index" and index == 0 or params[:action] == "show" %>
  <% end %>
</div>


<div>
  <% if params[:action] == "show" %>
    <%= link_to "Back to rooms", rooms_path %>
  <% elsif params[:action] == "index" %>
    <%= link_to "Show this room", room_path(room) %>
  <% end %>
</div>
<p>
  <%= link_to "Booking this room", new_booking_path(room: room) %>
</p>