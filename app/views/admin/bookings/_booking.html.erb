<div class="well well-lg">
  <div id="<%= dom_id booking %>">
    <p>
      <strong>Email:</strong>
      <%= booking.email %>
    </p>

    <p>
      <strong>Check in date:</strong>
      <%= booking.check_in_date %>
    </p>

    <p>
      <strong>Check out date:</strong>
      <%= booking.check_out_date %>
    </p>

    <p>
      <strong>Number people:</strong>
      <%= booking.number_people %>
    </p>

    <p>
      <strong>Room:</strong>
      <%= booking.room_id %>
    </p>

    <p>
      <% if params[:action] == 'index' %>
        <%= button_to "Show this booking", admin_booking_path(booking), method: :get, class: 'btn btn-info' %>
      <% elsif params[:action] == 'show' %>
        <%= button_to "Show all bookings", admin_bookings_path, method: :get, class: 'btn btn-primary' %>
      <% end %>
      <br/>
      <%= button_to "Publish this booking", admin_booking_path(booking), method: :put, class: 'btn btn-warning' %>
      <br/>
      <%= button_to "Destroy this booking", admin_booking_path(booking), method: :delete, class: 'btn btn-danger' %>
    </p>

  </div>
</div>
